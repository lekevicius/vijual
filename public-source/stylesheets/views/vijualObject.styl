.gridObject
  position absolute
  width 12.5%
  height 12.5%
  padding 2px 3px 3px 2px
  z-index 45

  .block
    width 100%
    height 100%
    position relative

    .block-background
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      border-radius 6px
      opacity 0.4

    .object-name
      position absolute
      top 2px
      left 6px
      right 20px
      height 20px
      font-size 12px
      opacity 0.5
      text-shadow 0 -1px 0 #000
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

    .object-activation-toggle
      width 12px
      height 12px
      position absolute
      top 6px
      right 6px
      border-radius 2px
      background rgba(#fff, 0.3)
      border 1px solid rgba(#fff, 0.6)

    .object-opacity-bar
      position absolute
      left 0
      bottom 0
      width 100%
      height 5px
      border-top 1px solid rgba(#fff, 0.3)
      border-radius 0 0 5px 5px

    .object-icon
      position absolute
      top 25px
      bottom 12px
      left 10px
      right 10px
      background-position center center
      background-repeat no-repeat
      background-size contain
      opacity 0.3

  &.selected
    .block-background
      opacity 0.8
    .object-name
      opacity 0.9
    .object-icon
      opacity 0.8

  &.ui-draggable-dragging
    .block-background
      opacity 0.6
      box-shadow 0 4px 14px #000

  .block.inactive

    .block-background, .object-opacity-bar
      background-color #444 !important

    .object-activation-toggle
      background transparent

    .object-opacity-bar
      opacity 0.6

    .object-icon
      opacity 0.15
