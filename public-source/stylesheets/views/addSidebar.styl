#sidebar.add-object, #sidebar.add-behavior

  .title
    height 48px
    text-transform uppercase
    font-size 14px
    padding 13px 10px
    color rgba(#fff, 0.6)
    background rgba(#000, 0.7)
    border-bottom 1px solid #000

  .types
    clearfix()
    padding 6px

.object-type
  clearfix()
  width 88px
  background rgba(#000, 0.3)
  border-radius 5px
  margin 4px
  float left
  border 1px solid rgba(#000, 0.6)
  z-index 26

  &.ui-draggable-dragging
    background #333
    border 1px solid rgba(#fff, 0.4)
    box-shadow 0 4px 14px rgba(#000, 0.8)

  .icon
    margin 14px auto 3px auto
    width 48px
    height 48px
    background-position center center
    background-repeat no-repeat
    background-size contain
    opacity 0.7

  .name
    height 42px
    opacity 0.9
    .text
      text-align center
      font-size 14px
      line-height 1.0
      content-vertical-align()
