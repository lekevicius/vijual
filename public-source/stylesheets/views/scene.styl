#content.scene
  width 100%
  height 100%
  overflow hidden

  .canvas-holder
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background url('../images/controlSurfaceUI/grid-background.png') 192px 134px

    .r
      height 100%
    canvas
      position absolute
      top 50%
      left 50%
      background #000
      box-shadow 0 0 6px 2px rgba(UIColor, 0.4)

  .interaction-layer
    position absolute
    top 0
    left 0
    right 0
    bottom 0

    .r
      height 100%

    .interaction-object
      position absolute
      width 100px
      height 100px
      left 50%
      top 50%
      margin -50px 0 0 -50px
      background rgba(UIColor, 0.7)
      // border 10px solid UIColor

  .sceneActions
    position absolute
    top 20px
    right 20px
    z-index 300

    clearfix()

    button
      float left
      padding 8px 12px
      background transparent
      border 1px solid rgba(#fff, 0.4)
      color #fff
      border-radius 6px

